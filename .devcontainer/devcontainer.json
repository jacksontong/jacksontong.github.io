{
  "name": "Jekyll DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
  },
  "customizations": {
    "vscode": {
      "extensions": ["EditorConfig.EditorConfig"],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": { "zsh": { "path": "/bin/zsh" } }
      }
    }
  },
  "forwardPorts": [],
  "remoteUser": "vscode"
}
